<Page
    x:Class="Japan_News.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Japan_News"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded_Event">


    <Grid x:Name="Main_Grid"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        RequestedTheme="Light">




        <!-- SplitViewコントロール -->
        <SplitView x:Name="Splitter" 
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="0" 
                   OpenPaneLength="320" 
                   IsPaneOpen="{Binding ElementName=Hamburger_Button,Path=IsChecked, Mode=TwoWay}"
                   PaneBackground="#0b004c">
            <!--↓ハンバーガーボタンで表示するViewエリア-->
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="74*"/>
                        <RowDefinition Height="0.0*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="105"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="105*"/>
                        <RowDefinition Height="42*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="1"
                                Grid.RowSpan="11">
                        <Viewbox StretchDirection="DownOnly"
                                 Height="auto"
                                 Width="auto">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Top" 
                                        Height="auto"
                                        Width="auto">
                                <Grid Width="auto"
                                            Height="auto"
                                            VerticalAlignment="Top"/>
                                <StackPanel Width="auto"
                                            Height="auto">
                                    <Border BorderBrush="Black"
                                            BorderThickness="1">
                                        <Button x:Name="Reset_Button"
                                            Width="auto"
                                            Height="auto"
                                            Foreground="#6b6b6b"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="30"
                                            Margin="0,0,0,0">
                                            <TextBlock  Width="800"
                                                    Text="画面の初期化"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"       
                                                    Foreground="White" 
                                                    FontSize="52pt"
                                                    Padding="10,15,10,15"
                                                    Margin="0,0,0,0"/>
                                        </Button>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Viewbox>
                        <Viewbox StretchDirection="DownOnly"
                                 Height="auto"
                                 Width="auto">
                            <StackPanel HorizontalAlignment="Left"
                                        VerticalAlignment="Top" 
                                        Height="auto"
                                        Width="auto">
                                <Grid Width="auto"
                                            Height="auto"
                                            VerticalAlignment="Top"/>
                                <StackPanel Width="auto"
                                            Height="auto">
                                    <Border BorderBrush="Black"
                                            BorderThickness="1">
                                        <Button x:Name="Exit_Button"
                                            Width="auto"
                                            Height="auto"
                                            Foreground="#6b6b6b"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            FontSize="30"
                                            Margin="0,0,0,0">
                                            <TextBlock  Width="800"
                                                    Text="アプリの終了"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"       
                                                    Foreground="White" 
                                                    FontSize="52pt"
                                                    Padding="10,15,10,15"
                                                    Margin="0,0,0,0"/>
                                        </Button>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Viewbox>
                    </StackPanel>
                </Grid>
            </SplitView.Pane>
            <!--↑ハンバーガーボタンで表示するViewエリア-->


            <!--↓メインコンテンツエリア-->
            <SplitView.Content>
                <Grid Background="LightGoldenrodYellow">
                    <Grid x:Name="LayoutRoot">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.008*"/>
                                <ColumnDefinition Width="0.04*"/>
                                <ColumnDefinition Width="0.04*"/>
                                <ColumnDefinition Width="0.04*"/>
                                <ColumnDefinition Width="0.04*"/>
                                <ColumnDefinition Width="0.04*"/>
                                <ColumnDefinition Width="0.008*"/>

                                <!--▼PC版の表示箇所。最初は全て横幅０にし、ボタンが押されて変動させる。-->
                                <ColumnDefinition x:Name="PC_Main_Article_Area"
                                    Width="0.0*"/>
                                <ColumnDefinition x:Name="PC_Main_Sign_IN_Area"
                                     Width="0.0*"/>
                                <ColumnDefinition  x:Name="PC_Main_Login_Area"
                                    Width="0.0*"/>
                                <ColumnDefinition  x:Name="PC_Main_Category_Set_Area"
                                    Width="0.0*"/>
                                <ColumnDefinition  x:Name="PC_Main_RSS_Set_Area"
                                    Width="0.0*"/>
                                <ColumnDefinition  x:Name="PC_Main_Setting_Area"
                                    Width="0.0*"/>
                                <ColumnDefinition  x:Name="PC_Main_ID_Delete_Area"
                                    Width="0.0*"/>
                                <ColumnDefinition  x:Name="PC_Main_WebView_Area"
                                    Width="0.0*"/>
                                <!--▲PC版の表示箇所。最初は全て横幅０にし、ボタンが押されて変動させる。-->
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="74*"/>
                                <RowDefinition Height="0.0*"/>
                                <!--▼ログイン後のＩＤ情報を表示する行-->
                                <RowDefinition x:Name="Login_After_Set_Area"
                               Height="0*"/>
                                <!--▲ログイン後のＩＤ情報を表示する行-->
                                <RowDefinition Height="105*"/>
                                <RowDefinition Height="105*"/>

                                <!--▼最初は「ID登録」と「どれか一つのみを表示する箇所-->
                                <RowDefinition Height="105*"
                               x:Name="Smartphone_Sign_IN_Button_Area_1"/>
                                <RowDefinition Height="105"
                               x:Name="Smartphone_Sign_IN_Button_Area_2"/>

                                <!--↓①ID作成後は、ログインボタンのみにする。-->
                                <RowDefinition Height="105*"
                               x:Name="Smartphone_Login_Button_Area_1"/>
                                <RowDefinition Height="105*"
                               x:Name="Smartphone_Login_Button_Area_2"/>
                                <!--※ここのボタンはログイン後はcontentを「タグ登録」へ変更する。-->
                                <!--※ここのボタンはログアウト後はcontentを「ログイン」へ変更する。-->

                                <!--②ログイン後はカテゴリのみの表示にする。-->

                                <!--▲どれか一つのみを表示する箇所-->

                                <RowDefinition Height="105*"/>
                                <RowDefinition Height="105*"/>
                                <RowDefinition Height="42*"/>
                            </Grid.RowDefinitions>

                            <!--※メモ：「行」はrow。「列」はColumn-->
                            <!--※メモ：ColumnSpanは、横何列分を１から指定。-->



                            <!--↓左上の表示箇所の色指定-->
                            <Border Background="#2f5cb6"
                                    Grid.Column="0" 
                                    Grid.ColumnSpan="7"/>
                            <!--↑左上の表示箇所の色指定-->


                            <!--▼↓右上のテキスト表示箇所の色指定-->
                            <!--↓メイン記事-->
                            <Border Grid.Column ="7" 
                                    Grid.ColumnSpan="1"
                                    Background="#1fad7a"/>
                            <!--↓ID登録-->
                            <Border Grid.Column ="8" 
                                    Grid.ColumnSpan="1"
                                    Background="#499e00"/>
                            <!--↓ログイン-->
                            <Border Grid.Column ="9" 
                                    Grid.ColumnSpan="1"
                                    Background="#008728"/>
                            <!--↓属性（予定）-->
                            <Border Grid.Column ="10" 
                                    Grid.ColumnSpan="1"
                                    Background="#008748"/>
                            <!--↓RSS-->
                            <Border Grid.Column ="11" 
                                    Grid.ColumnSpan="1"
                                    Background="#009338"/>
                            <!--↓設定-->
                            <Border Grid.Column ="12" 
                                    Grid.ColumnSpan="1"
                                    Background="#009657"/>
                            <!--↓ID削除-->
                            <Border Grid.Column ="13" 
                                    Grid.ColumnSpan="1"
                                    Background="#1b9615"/>
                            <!--↓ブラウザ表示箇所-->
                            <Border Grid.Column ="14" 
                                    Grid.ColumnSpan="1"
                                    Background="#009900"/>

                            <!--▲↑右上のテキスト表示箇所の色指定-->

                            <!--↓左下のテキスト表示箇所の色指定-->
                            <Border Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.RowSpan="29"
                                    Grid.ColumnSpan="7"
                                    Background="#8cd6ff"/>
                            <!--↑左下のテキスト表示箇所の色指定-->

                            <!--↓右下の表示箇所の色指定-->
                            <Border Name="Result_Area"
                                    Grid.Row="1"
                                    Grid.Column ="7" 
                                    Grid.RowSpan="29"
                                    Grid.ColumnSpan="8" 
                                    Background="#152951"/>
                            <!--↑右下の表示箇所の色指定-->

                            <!--↓右下の表示箇所のスクロール指定-->
                            <ScrollViewer HorizontalAlignment="Center"
                                          Grid.Row="2"
                                          Grid.Column="7" 
                                          Grid.RowSpan="29"
                                          Grid.ColumnSpan="1" 
                                          VerticalAlignment="Center" 
                                          Height="auto"
                                          Width="auto"
                                          Margin="20,10,20,10">
                                <Viewbox StretchDirection="DownOnly"
                                         Height="auto"
                                         Width="auto">
                                    <StackPanel Name="Article_Stack_Panel_Area"
                                                VerticalAlignment="Center" 
                                                Height="auto"
                                                Width="auto">
                                        <Grid x:Name="testGrid"
                                              Width="auto"
                                              Height="auto"
                                              VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Viewbox>
                            </ScrollViewer>
                            <!--↑右下の表示箇所のスクロール指定-->






                            <!--▼PC画面時の左側、並びにスマホ版のメイン画面側のエリア-->
                            <ScrollViewer Grid.Row="3"
                                            Grid.Column="0" 
                                            Grid.RowSpan="15"
                                            Grid.ColumnSpan="7" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Height="auto"
                                            Width="auto">
                                <!--ここにログイン中のＩＤの表示のパネル。-->
                                <Viewbox StretchDirection="DownOnly"
                                         Height="auto"
                                         Width="auto">
                                    <StackPanel HorizontalAlignment="Center"
                                                VerticalAlignment="Center" 
                                                Height="auto"
                                                Width="auto">
                                        <Grid Width="auto"
                                              Height="auto"
                                              VerticalAlignment="Center"/>
                                        <StackPanel Width="auto"
                                                    Height="auto">
                                            <Button x:Name="Search_Button"
                                                    Width="500"
                                                    Height="80"
                                                    Foreground="#6b6b6b"
                                                    Background="#FFFFFF"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Content="Search"
                                                    FontSize="30"
                                                    Margin="20,30,20,30"
                                                    IsEnabled="True"
                                                    ToolTipService.ToolTip="RSSの登録内容・設定に準じてニュース記事の検索を行います。"/>




                                            <StackPanel Name="smp_WebView_UI_Area"
                                                        Width="auto"
                                                        Height="auto"
                                                        Background="#152951"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Visibility="Visible">
                                                <Viewbox StretchDirection="DownOnly"
                                                            Height="auto"
                                                            Width="auto">
                                                    <StackPanel Height="auto"
                                                            Width="460"
                                                            Margin ="30,18,30,18">
                                                        <Button x:Name="smp_Close_AppBarButton"
                                                                Width="460"
                                                                Height="auto"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center">
                                                            <StackPanel Width ="auto"
                                                                    Height ="auto"
                                                                    Orientation="Horizontal">
                                                                <Viewbox StretchDirection="DownOnly"
                                                                        Height="auto"
                                                                        Width="auto">
                                                                    <TextBlock  Width="auto"
                                                                    Text="×"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"       
                                                                    Foreground="White" 
                                                                    FontSize="32pt"
                                                                                Padding="0,4,0,10"
                                                                    Margin="0,0,0,0"/>
                                                                </Viewbox>
                                                                <Viewbox StretchDirection="DownOnly"
                                                                        Height="auto"
                                                                        Width="auto">
                                                                    <TextBlock  Width="auto"
                                                                                Text="Webページを閉じます。"
                                                                                HorizontalAlignment="Left"
                                                                                VerticalAlignment="Center"       
                                                                                Foreground="White" 
                                                                                FontSize="21pt"
                                                                                Padding="10,0,10,0"
                                                                                Margin="0,0,0,0"
                                                                                ToolTipService.ToolTip="Web画面を閉じます。"/>
                                                                </Viewbox>
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </Viewbox>
                                                <Viewbox StretchDirection="DownOnly"
                                                            Height="auto"
                                                            Width="auto">
                                                <StackPanel Height="auto"
                                                            Width="520"
                                                            Margin ="0,8,0,18">
                                                        <TextBox x:Name="smp_Address_TextBox"
                                                         Height="auto" 
                                                         Margin="0,0,0,0"
                                                         VerticalAlignment="Center" 
                                                         Width="520"
                                                         Text=""
                                                         FontFamily="Meiryo UI" 
                                                         FontSize="22" 
                                                         IsReadOnly="True"
                                                         ToolTipService.ToolTip="表示しているWebページのURLです。"/>                                                    </StackPanel>
                                                </Viewbox>
                                                <Viewbox StretchDirection="DownOnly"
                                                            Height="auto"
                                                            Width="auto">

                                                    <StackPanel HorizontalAlignment="Left" 
                                                                Height="52"  
                                                                VerticalAlignment="Bottom" 
                                                                Width="520" 
                                                                Background="#847774"
                                                                Margin="0,0,0,20"
                                                                Orientation="Horizontal">
                                                        <AppBarButton x:Name="smp_Back_AppBarButton" 
                                                              Icon="Back"
                                                              Foreground="White" 
                                                              Height="auto"
                                                              Width="120" 
                                                              VerticalAlignment="Top"
                                                              Margin="50,0,10,0"
                                                              ToolTipService.ToolTip="一つ前のWebページへ戻ります。"/>

                                                        <AppBarButton x:Name="smp_Forward_AppBarButton"
                                                                Foreground="White" 
                                                                Height="auto"
                                                                Width="120" 
                                                                VerticalAlignment="Top"
                                                                Icon="Forward" 
                                                                Margin="0,0,10,0"
                                                                FontWeight="Bold"
                                                                ToolTipService.ToolTip="既に開いたWebページへ進みます。"/>

                                                        <AppBarButton x:Name="smp_Refresh_AppBarButton" 
                                                                Height="auto"  
                                                                Foreground="White" 
                                                                VerticalAlignment="Center" 
                                                                Width="80" 
                                                                Icon="refresh" 
                                                                Margin="42,0,10,0"
                                                                ToolTipService.ToolTip="Webページを再読み込みします。"/>
                                                    </StackPanel>
                                                </Viewbox>
                                            </StackPanel>


                                            <ScrollViewer  x:Name="smp_Web_View_ScrollViewer"
                                                            Width="auto"
                                                            Height="600"
                                                            Background="#152951"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Margin ="0,0,0,30"
                                                            Visibility="Visible">
                                                <Viewbox StretchDirection="DownOnly"
                                                            Height="auto"
                                                            Width="auto">
                                                    <StackPanel x:Name="smp_Result_URL_WebView_StackPanel"
                                                                    Margin ="30,18,30,18"
                                                                    Width="460"
                                                                    Height="1000">
                                                        <WebView x:Name="smp_Result_URL_WebView"
                                                                         HorizontalAlignment="Left" 
                                                                         Width="460"
                                                                         Height="1000" 
                                                                         Margin="0,0,0,0" 
                                                                         VerticalAlignment="Top"
                                                                         FrameDOMContentLoaded ="WebView_NavigationCompleted"
                                                                         NavigationCompleted="WebView_NavigationCompleted"
                                                                         NavigationFailed="WebView_Navigation_Error"
                                                                         Visibility="Visible"/>
                                                    </StackPanel>
                                                </Viewbox>
                                            </ScrollViewer>





                                            <StackPanel Name="smp_Article_Stack_Panel_Text_Area"
                                                        Width="auto"
                                                        Height="auto"
                                                        Background="#152951"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Margin ="0,10,0,0"
                                                        Visibility="Visible">
                                                <Viewbox StretchDirection="DownOnly"
                                                            Height="auto"
                                                            Width="auto">
                                                    <StackPanel Background="#1fad7a"
                                                                Margin ="30,18,30,18"
                                                                Width="460"
                                                                Height="auto"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">


                                                        <Viewbox StretchDirection="DownOnly"
                                                             Height="auto"
                                                             Width="auto"
                                                             VerticalAlignment="Center">
                                                            <StackPanel VerticalAlignment="Center" 
                                                                    Height="auto"
                                                                    Width="auto">
                                                                <StackPanel VerticalAlignment="Center"
                                                                        Height="auto"
                                                                        Width="auto"
                                                                        Orientation="Horizontal">

                                                                    <Grid Width="auto"
                                                                  Height="auto"
                                                                  VerticalAlignment="Center"/>
                                                                    <StackPanel Height="auto"
                                                                        Width="auto">
                                                                        <Button x:Name="smp_Result_Close_Button"
                                                                        Width="auto"
                                                                        Height="auto"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Center"
                                                                        Margin="20,10,20,10">
                                                                            <StackPanel Width ="auto"
                                                                                Height ="auto"
                                                                                Orientation="Horizontal">
                                                                                <Viewbox StretchDirection="DownOnly"
                                                                                 Height="auto"
                                                                                 Width="auto">
                                                                                    <TextBlock  Width="auto"
                                                                                Text="×"
                                                                                HorizontalAlignment="Left"
                                                                                VerticalAlignment="Center"       
                                                                                Foreground="White" 
                                                                                FontSize="104pt"
                                                                                Padding="10,0,10,8"
                                                                                Margin="0,0,0,0"/>
                                                                                </Viewbox>
                                                                                <Viewbox StretchDirection="DownOnly"
                                                                                 Height="auto"
                                                                                 Width="auto">
                                                                                    <TextBlock  Width="auto"
                                                                                Text="検索結果画面を閉じます。"
                                                                                HorizontalAlignment="Left"
                                                                                VerticalAlignment="Center"       
                                                                                Foreground="White" 
                                                                                FontSize="84pt"
                                                                                Padding="10,0,10,0"
                                                                                Margin="0,0,0,0"/>
                                                                                </Viewbox>
                                                                            </StackPanel>

                                                                        </Button>
                                                                    </StackPanel>

                                                                    <StackPanel x:Name="smp_Sort_Area_StackPanel"
                                                                        Height="auto"
                                                                        Width="auto"
                                                                        VerticalAlignment="Center"
                                                                        Margin="20,11,20,11">
                                                                        <ComboBox x:Name="smp_Sort_ComboBox"
                                                                        Height="auto"
                                                                        Width="729"
                                                                        FontSize="84px"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalContentAlignment="Center"
                                                                        Visibility="Visible">
                                                                            <ComboBoxItem x:Name="smp_Ascending_Order_ComboBoxItem"
                                                                              HorizontalAlignment="Center"
                                                                              HorizontalContentAlignment="Center"
                                                                              Content="新着順"
                                                                              Width="729"/>
                                                                            <ComboBoxItem x:Name="smp_Descending_Order_ComboBoxItem"
                                                                                  HorizontalAlignment="Center"
                                                                                  HorizontalContentAlignment="Center"
                                                                                  Content="古い順"
                                                                                  Width="729"/>
                                                                            <ComboBoxItem x:Name="smp_Registration_Order_ComboBoxItem"
                                                                                  HorizontalAlignment="Center"
                                                                                  HorizontalContentAlignment="Center"
                                                                                  Content="RSS順"
                                                                                  Width="729"/>
                                                                        </ComboBox>
                                                                    </StackPanel>
                                                                </StackPanel>


                                                                <StackPanel Height="auto"
                                                                        Width="auto"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">
                                                                    <Viewbox StretchDirection="DownOnly">
                                                                        <TextBlock Name="smp_Result_Text" 
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"       
                                                                                Foreground="White" 
                                                                                FontSize="99pt" 
                                                                                Margin="20,15,20,15"
                                                                                Text=""
                                                                                Width="auto"
                                                                                Height="auto"/>
                                                                    </Viewbox>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Viewbox>

                                                    </StackPanel>
                                                </Viewbox>
                                            </StackPanel>


                                            <ScrollViewer  x:Name="smp_Article_Area_ScrollViewer"
                                                            Width="auto"
                                                            Height="490"
                                                            Background="#152951"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Margin ="0,0,0,30"
                                                            Visibility="Visible">
                                                <Viewbox StretchDirection="DownOnly"
                                                        Height="auto"
                                                        Width="auto">
                                                    <StackPanel Name="Smp_Article_Stack_Panel_Area" 
                                                            Margin ="10,18,10,18"
                                                            Width="500"
                                                            Height="auto"
                                                            Background="#152951">
                                                    </StackPanel>
                                                </Viewbox>
                                            </ScrollViewer>



                                            <Button x:Name="ID_Sing_IN_Button"
                                                    Width="500"
                                                    Height="80"
                                                    Foreground="#6b6b6b"
                                                    Background="#FFFFFF"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    Content="ユーザー登録"
                                                    FontSize="30"
                                                    Margin="20,30,20,30"
                                                    Visibility="Visible"
                                                    IsEnabled="True"
                                                    ToolTipService.ToolTip="検索ワードの設定が可能になるユーザーを新規に登録します。"/>


                                            <!--↓スマホ版での表示の際、ボタンが押されたら「auto」にしてログインボタンなどを表示する。-->


                                            <StackPanel Name="smp_ID_Sing_IN_Area"
                                                        Height="auto"
                                                        Background="#152951"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Margin ="0,10,0,30"
                                                        Visibility="Visible">

                                                <Viewbox StretchDirection="DownOnly"
                                                                    Height="auto"
                                                                    Width="auto">
                                                    <StackPanel Background="White"
                                                                        Margin ="30,18,30,18"
                                                                        Width="460"
                                                                        Height="auto"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center">



                                                        <Viewbox StretchDirection="DownOnly"
                                                                    Height="auto"
                                                                    Width="auto">
                                                            <StackPanel VerticalAlignment="Center" 
                                                                        Height="auto"
                                                                        Width="auto">
                                                                <Grid Width="auto"
                                                                      Height="auto"
                                                                      VerticalAlignment="Center"/>

                                                                <!--↓登録ＩＤが20件以下である場合に表示するログイン画面-->
                                                                <StackPanel x:Name="smp_ID_Sign_IN_Possible_Area"
                                                                            Width="900"
                                                                            Height="auto"
                                                                            Visibility="Visible"
                                                                            HorizontalAlignment="Left">
                                                                    <Viewbox StretchDirection="DownOnly"
                                                                             Height="auto"
                                                                             Width="auto"
                                                                             HorizontalAlignment="Left">
                                                                        <TextBlock  Width="auto"
                                                                                Height="auto"
                                                                                Text="〇 ユーザー登録"
                                                                                FontSize="76pt"
                                                                                Foreground="#4c4c4c"
                                                                                Margin="70,30,0,20"/>
                                                                    </Viewbox>
                                                                    <Viewbox StretchDirection="DownOnly"
                                                                             Height="auto"
                                                                             Width="auto"
                                                                             HorizontalAlignment="Left">
                                                                        <TextBlock  Width="auto"
                                                                                Height="auto"
                                                                                Text="※登録したいユーザー名を12文字以内で入力して下さい。"
                                                                                FontSize="35pt"
                                                                                Foreground="#2E2C2C"
                                                                                Margin="50,5,0,5"/>
                                                                    </Viewbox>
                                                                    <Viewbox StretchDirection="DownOnly"
                                                                             Height="auto"
                                                                             Width="auto"
                                                                             HorizontalAlignment="Left">
                                                                        <TextBlock  Width="auto"
                                                                                Height="auto"
